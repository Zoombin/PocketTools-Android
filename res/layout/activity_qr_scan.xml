<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/color_gradient_bg" >

    <ImageView
        android:id="@id/img_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <FrameLayout
        android:id="@id/scan_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.juhe.pockettools.commonview.TopActiveBarView
        android:id="@id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="top"
        android:background="@color/transparent" />

    <FrameLayout
        android:id="@id/qrcode_result_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="top"
        android:layout_marginTop="270.0dip" >

        <com.juhe.pockettools.qrcode.QRCodeGoodsInfoView
            android:id="@id/view_goods_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="20.0dip"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <TextView
                android:id="@id/view_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="10.0dip"
                android:textColor="@color/white"
                android:textSize="22.0sp"
                android:visibility="invisible" />
        </LinearLayout>

        <ImageView
            android:id="@id/goods_init_state"
            android:layout_width="320.0dip"
            android:layout_height="140.0dip"
            android:layout_gravity="center"
            android:background="@drawable/gr_scanner_help" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:src="@drawable/gr_nav_line" />
    </FrameLayout>

</FrameLayout>