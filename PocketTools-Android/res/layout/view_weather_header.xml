<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@id/infos_page_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="280.0dip" >

            <TextView
                android:id="@id/txt_weather_centigrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:gravity="center"
                android:singleLine="true"
                android:text="23°"
                android:textColor="@color/white"
                android:textSize="88.0sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50.0dip"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="5.0dip"
                android:layout_toRightOf="@id/txt_weather_centigrade"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="16.0dip"
                        android:layout_height="16.0dip"
                        android:layout_gravity="left|center"
                        android:background="@drawable/gr_weather_up" />

                    <TextView
                        android:id="@id/txt_weather_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="3.0dip"
                        android:gravity="center_vertical"
                        android:text="0°"
                        android:textColor="@color/white"
                        android:textSize="18.0sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="0.0dip"
                    android:layout_weight="1.0"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="16.0dip"
                        android:layout_height="16.0dip"
                        android:layout_gravity="left|center"
                        android:background="@drawable/gr_weather_dn" />

                    <TextView
                        android:id="@id/txt_weather_dn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="3.0dip"
                        android:gravity="center_vertical"
                        android:text="0°"
                        android:textColor="@color/white"
                        android:textSize="18.0sp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:layout_width="280.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center" >

            <FrameLayout
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="top|left|center"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="100.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/weathercircle" >

                <TextView
                    android:id="@id/txt_weather_wind_level"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="36.0sp" />

                <TextView
                    android:id="@id/txt_weather_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="44.0dip"
                    android:gravity="center"
                    android:text="西北风"
                    android:textColor="@color/white"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@id/txt_weather_wind_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right|center"
                    android:layout_marginRight="6.0dip"
                    android:layout_marginTop="30.0dip"
                    android:gravity="center"
                    android:text="级"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_gravity="top|left|center"
                android:layout_marginBottom="5.0dip"
                android:layout_marginLeft="200.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/weathercircle" >

                <TextView
                    android:id="@id/txt_weather_humidity_level"
                    android:layout_width="40.0dip"
                    android:layout_height="40.0dip"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="8.0dip"
                    android:gravity="center"
                    android:text="43"
                    android:textColor="@color/white"
                    android:textSize="36.0sp" />

                <TextView
                    android:id="@id/txt_weather_humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="30.0dip"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="44.0dip"
                    android:gravity="center"
                    android:text="湿度"
                    android:textColor="@color/white"
                    android:textSize="13.0sp" />

                <TextView
                    android:id="@id/txt_weather_humidity_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right|center"
                    android:layout_marginRight="6.0dip"
                    android:layout_marginTop="30.0dip"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="80.0dip"
                android:layout_height="80.0dip"
                android:layout_marginBottom="5.0dip"
                android:layout_marginTop="5.0dip"
                android:background="@drawable/weathercircle" >

                <ImageView
                    android:id="@id/image_weather"
                    android:layout_width="50.0dip"
                    android:layout_height="50.0dip"
                    android:layout_gravity="top|center" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/txt_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="15.0dip"
                    android:gravity="center"
                    android:text="阵雨"
                    android:textColor="@color/white"
                    android:textSize="13.0sp" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:layout_marginTop="5.0dip"
        android:background="@color/listview_divider_color" />

    <FrameLayout
        android:id="@id/ly_hour_weather"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <com.juhe.pockettools.commonview.HorizontalListView
            android:id="@id/weather_hour_listview"
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:background="@color/transparent" />

        <com.juhe.pockettools.commonview.CircleProgressBar
            android:id="@id/circle_progress_bar"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:background="@color/listview_divider_color" />

    <LinearLayout
        android:id="@id/suggestlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@id/dressingAdviceLabel"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:layout_marginTop="10.0dip"
            android:text="建议着长袖T恤、衬衫加单裤等服装。年老体弱者宜着针织长袖衬衫、马甲和长裤。"
            android:textColor="@color/white" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left|center"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="10.0dip" >

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:background="@drawable/g_weather_uv" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/uvLabel"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="35.0dip"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="适宜"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="10.0dip" >

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="left"
                    android:background="@drawable/g_weather_car" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/washLabel"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="35.0dip"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="适宜"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left|center"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="45.0dip" >

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:background="@drawable/g_weather_travel" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/travelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="35.0dip"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="适宜"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right|center"
                android:layout_marginBottom="10.0dip"
                android:layout_marginRight="30.0dip"
                android:layout_marginTop="45.0dip" >

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_gravity="left"
                    android:background="@drawable/g_weather_sports" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/execriseLabel"
                    android:layout_width="50.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="35.0dip"
                    android:gravity="left|center"
                    android:singleLine="true"
                    android:text="适宜"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </FrameLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:text="未来天气"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:layout_marginTop="5.0dip"
        android:background="@color/listview_divider_color" />

</LinearLayout>