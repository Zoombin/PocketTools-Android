<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="310.0dip" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="70.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@id/txt_pm_value"
                android:layout_width="wrap_content"
                android:layout_height="90.0dip"
                android:layout_gravity="center"
                android:layout_marginBottom="15.0dip"
                android:gravity="center"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="88.0sp" />

            <FrameLayout
                android:id="@id/pm_state_container"
                android:layout_width="100.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="top|center"
                android:background="@drawable/bg_pm25_main_txt" >

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/txt_pm_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14.0sp" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="280.0dip"
            android:layout_height="30.0dip"
            android:layout_gravity="bottom|center" >

            <FrameLayout
                android:id="@id/ly_1"
                android:layout_width="70.0dip"
                android:layout_height="30.0dip" >

                <TextView
                    android:layout_width="36.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="right|center"
                    android:text="PM2.5"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@id/lbl_pm25"
                    android:layout_width="30.0dip"
                    android:layout_height="18.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="38.0dip"
                    android:background="@drawable/bg_pm25_pervalue"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/ly_2"
                android:layout_width="70.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="top|left|center"
                android:layout_marginLeft="70.0dip" >

                <TextView
                    android:layout_width="36.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="right"
                    android:text="PM10"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@id/lbl_pm10"
                    android:layout_width="30.0dip"
                    android:layout_height="18.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="38.0dip"
                    android:background="@drawable/bg_pm25_pervalue"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/ly_3"
                android:layout_width="70.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="top|left|center"
                android:layout_marginLeft="140.0dip" >

                <TextView
                    android:layout_width="28.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="right"
                    android:text="SO"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />

                <TextView
                    android:layout_width="8.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left|center"
                    android:layout_marginBottom="7.0dip"
                    android:layout_marginLeft="28.0dip"
                    android:gravity="left"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="8.0sp" />

                <TextView
                    android:id="@id/lbl_SO"
                    android:layout_width="30.0dip"
                    android:layout_height="18.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="36.0dip"
                    android:background="@drawable/bg_pm25_pervalue"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:id="@id/ly_4"
                android:layout_width="70.0dip"
                android:layout_height="30.0dip"
                android:layout_gravity="top|left|center"
                android:layout_marginLeft="210.0dip" >

                <TextView
                    android:layout_width="28.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:gravity="right"
                    android:text="NO"
                    android:textColor="@color/white"
                    android:textSize="12.0sp" />

                <TextView
                    android:layout_width="8.0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left|center"
                    android:layout_marginBottom="7.0dip"
                    android:layout_marginLeft="28.0dip"
                    android:gravity="left"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="8.0sp" />

                <TextView
                    android:id="@id/lbl_NO"
                    android:layout_width="30.0dip"
                    android:layout_height="18.0dip"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="36.0dip"
                    android:background="@drawable/bg_pm25_pervalue"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white" />
            </FrameLayout>
        </FrameLayout>
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:layout_marginTop="5.0dip"
        android:background="@color/listview_divider_color" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5.0dip"
            android:text="过去七天空气质量"
            android:textColor="@color/white"
            android:textSize="12.0sp" />

        <com.juhe.pockettools.commonview.CircleProgressBar
            android:id="@id/circle_progress_bar"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:layout_gravity="center" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@id/chartbarpm"
            android:layout_width="fill_parent"
            android:layout_height="120.0dip"
            android:layout_marginTop="5.0dip" />
    </FrameLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2.0px"
        android:layout_marginTop="10.0dip"
        android:background="@color/listview_divider_color" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20.0dip"
        android:layout_marginTop="10.0dip"
        android:gravity="left"
        android:text="监测点数据"
        android:textColor="@color/white"
        android:textSize="12.0sp" />

</LinearLayout>