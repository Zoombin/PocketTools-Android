<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/color_gradient_bg" >

    <ImageView
        android:id="@id/img_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <View
        android:id="@id/view_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:alpha="0.0"
        android:background="@color/transparent_black_50" />

    <FrameLayout
        android:id="@id/actionBar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_gravity="top"
        android:background="@color/transparent" >

        <TextView
            android:id="@id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="苏州"
            android:textColor="@color/white"
            android:textSize="24.0sp" />

        <FrameLayout
            android:id="@id/btn_cancel"
            android:layout_width="90.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="top|left|center" >

            <Button
                android:id="@id/btn_back"
                android:layout_width="44.0dip"
                android:layout_height="44.0dip"
                android:layout_gravity="left|center"
                android:background="@drawable/btn_nav_back" />
        </FrameLayout>

        <FrameLayout
            android:id="@id/btn_save"
            android:layout_width="80.0dip"
            android:layout_height="48.0dip"
            android:layout_gravity="top|right|center" >

            <TextView
                android:id="@id/txtCitys"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="13.0dip"
                android:text="城市"
                android:textColor="@color/white"
                android:textSize="18.0sp" />
        </FrameLayout>
    </FrameLayout>

    <ListView
        android:id="@id/week_weather_listveiw"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="50.0dip"
        android:cacheColorHint="#00000000"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:divider="@color/listview_divider_color"
        android:dividerHeight="1.0px"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="false"
        android:isScrollContainer="false"
        android:listSelector="@color/transparent"
        android:scrollbars="none" />

</FrameLayout>