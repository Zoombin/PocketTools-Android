<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.juhe.pockettools.commonview.TopActiveBarView
        android:id="@id/action_bar"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/air_edit_start"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/transparent_20"
            android:gravity="center"
            android:hint="@string/train_begin"
            android:imeOptions="normal|actionUnspecified"
            android:inputType="text"
            android:paddingBottom="10.0dip"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip"
            android:paddingTop="10.0dip"
            android:textColor="@color/white"
            android:textColorHint="@color/default_texthint_color"
            android:textCursorDrawable="@null"
            android:textSize="24.0sp" />

        <ImageView
            android:layout_width="1.0dip"
            android:layout_height="fill_parent"
            android:background="@color/transparent" />

        <EditText
            android:id="@+id/air_edit_end"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@color/transparent_20"
            android:gravity="center"
            android:hint="@string/train_end"
            android:imeOptions="normal|actionUnspecified"
            android:inputType="text"
            android:paddingBottom="10.0dip"
            android:paddingLeft="30.0dip"
            android:paddingRight="30.0dip"
            android:paddingTop="10.0dip"
            android:textColor="@color/white"
            android:textColorHint="@color/default_texthint_color"
            android:textCursorDrawable="@null"
            android:textSize="24.0sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="65.0dip" >

        <TextView
            android:id="@id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:text="出发时间"
            android:textColor="@color/white"
            android:textSize="16.0sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/air_btn_select_time"
            android:layout_width="100.0dip"
            android:layout_height="44.0dip"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="65.0dip"
            android:background="@drawable/btn_train_type_res"
            android:text="@string/train_all"
            android:textColor="@color/white"
            android:textSize="16.0sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/air_btn_search"
            android:layout_width="67.0dip"
            android:layout_height="45.0dip"
            android:layout_gravity="right|center"
            android:layout_marginRight="10.0dip"
            android:background="@drawable/btn_package_search_res"
            android:text="@string/package_search"
            android:textColor="@color/color_btn_blue_txt"
            android:textSize="16.0sp" />
    </FrameLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/gr_nav_line" />

    <ListView
        android:id="@+id/air_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:cacheColorHint="#00000000"
        android:clipChildren="true"
        android:clipToPadding="true"
        android:divider="@color/listview_divider_color"
        android:dividerHeight="1.0px"
        android:footerDividersEnabled="true"
        android:headerDividersEnabled="true"
        android:isScrollContainer="false"
        android:listSelector="@drawable/color_list_select"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style" />

</LinearLayout>