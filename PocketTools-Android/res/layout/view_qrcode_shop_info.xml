<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbarThumbVertical="@drawable/custom_scroll_style" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@id/goods_basic_info_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <FrameLayout
                    android:layout_width="70.0dip"
                    android:layout_height="70.0dip"
                    android:layout_gravity="top|left|center"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:background="@color/white" >

                    <ImageView
                        android:id="@id/goods_img"
                        android:layout_width="66.0dip"
                        android:layout_height="66.0dip"
                        android:layout_gravity="top|left|center"
                        android:layout_margin="2.0dip"
                        android:scaleType="fitXY" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@id/goods_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:minHeight="40.0dip"
                        android:textColor="@color/white"
                        android:textSize="16.0sp" />

                    <LinearLayout
                        android:id="@id/goods_info_container"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_marginBottom="20.0dip"
                        android:layout_weight="1.0"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="22.0dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="45.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/goods_company"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@id/goods_company"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:gravity="left|center"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="22.0dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="45.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="left|center"
                                android:text="@string/goods_brand"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@id/goods_brand"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="22.0dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="45.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/goods_specification"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@id/goods_specification"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:gravity="left|center"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="22.0dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="45.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/goods_price"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />

                            <TextView
                                android:id="@id/goods_price"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:gravity="left|center"
                                android:textColor="@color/white"
                                android:textSize="15.0sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="22.0dip"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="45.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/goods_qrcode"
                                android:textColor="@color/transparent_50"
                                android:textSize="12.0sp" />

                            <TextView
                                android:id="@id/goods_qrcode"
                                android:layout_width="0.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1.0"
                                android:gravity="left|center"
                                android:textColor="@color/transparent_50"
                                android:textSize="12.0sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gr_nav_line" />

            <com.juhe.pockettools.qrcode.QRCodeGoodsPriceListView
                android:id="@id/goods_place_price_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:clipChildren="true"
                android:clipToPadding="true"
                android:divider="@color/listview_divider_color"
                android:dividerHeight="1.0px"
                android:footerDividersEnabled="true"
                android:headerDividersEnabled="true"
                android:isScrollContainer="false"
                android:listSelector="@drawable/color_list_select" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/gr_nav_line" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>