<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/train_edit_times"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@color/transparent"
        android:hint="请输入车次号"
        android:inputType="text"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:background="@color/listview_divider_color" />

    <Button
        android:id="@+id/train_btn_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        android:layout_marginBottom="20.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="10.0dip"
        android:background="@drawable/common_btn_bg"
        android:paddingBottom="5.0dip"
        android:paddingTop="5.0dip"
        android:text="@string/package_search"
        android:textColor="@color/white"
        android:textSize="20.0sp" />

    <com.juhe.pockettools.train.TrainTimesSearchResultView
        android:id="@id/train_times_search_result"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>