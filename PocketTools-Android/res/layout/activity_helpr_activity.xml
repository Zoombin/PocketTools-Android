<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@id/img_bg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_setting"
                android:layout_width="50.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="right|center"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/btn_setup_res" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" >

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_updatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_city"
                android:layout_marginLeft="15dip"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ly_weather_hour_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:orientation="vertical" >

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.0px"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5.0dip"
                    android:background="@color/listview_divider_color" />

                <com.juhe.pockettools.commonview.HorizontalListView
                    android:id="@id/weather_hour_listview"
                    android:layout_width="fill_parent"
                    android:layout_height="100.0dip" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2.0px"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:background="@color/listview_divider_color" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/ly_weather_centigrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ly_weather_hour_listview"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dip" >

                <TextView
                    android:id="@id/txt_weather_centigrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="60.0sp" />

                <LinearLayout
                    android:id="@+id/ly_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5.0dip"
                    android:layout_toRightOf="@id/txt_weather_centigrade"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_weather_up"
                            android:layout_width="16.0dip"
                            android:layout_height="16.0dip"
                            android:layout_gravity="left|center"
                            android:background="@drawable/gr_weather_up"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@id/txt_weather_up"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="3.0dip"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="18.0sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/iv_weather_dn"
                            android:layout_width="16.0dip"
                            android:layout_height="16.0dip"
                            android:layout_gravity="left|center"
                            android:background="@drawable/gr_weather_dn"
                            android:visibility="invisible" />

                        <TextView
                            android:id="@id/txt_weather_dn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="3.0dip"
                            android:gravity="center_vertical"
                            android:textColor="#2ce4ff"
                            android:textSize="18.0sp" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ly_weather_centigrade"
                android:layout_marginLeft="15dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@id/image_weather"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/txt_weather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_pm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/ly_weather_hour_listview"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_pm_lable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="PM2.5"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@id/txt_pm_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="30.0sp" />

                <com.juhe.pockettools.commonview.FZKTTextView
                    android:id="@id/txt_pm_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="16.0sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@id/bottom_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/tab_tool_container"
                android:layout_width="fill_parent"
                android:layout_height="161.0dip"
                android:layout_gravity="bottom" >

                <LinearLayout
                    android:id="@+id/tool_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#44252626"
                    android:orientation="vertical"
                    android:visibility="visible" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/tool_page"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="15.0dip" >

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/infoview_indicator_tool"
                            android:layout_width="fill_parent"
                            android:layout_height="10.0dip"
                            android:layout_gravity="center" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/life_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#44252626"
                    android:orientation="vertical"
                    android:visibility="invisible" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/life_page"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="15.0dip" >

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/infoview_indicator_life"
                            android:layout_width="fill_parent"
                            android:layout_height="10.0dip"
                            android:layout_gravity="center" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#44252626"
                    android:orientation="vertical"
                    android:visibility="invisible" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/service_page"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="15.0dip" >

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/infoview_indicator_service"
                            android:layout_width="fill_parent"
                            android:layout_height="10.0dip"
                            android:layout_gravity="center" />
                    </FrameLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/store_container"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#44252626"
                    android:orientation="vertical"
                    android:visibility="invisible" >

                    <android.support.v4.view.ViewPager
                        android:id="@+id/store_page"
                        android:layout_width="fill_parent"
                        android:layout_height="0.0dip"
                        android:layout_weight="1.0" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="15.0dip" >

                        <com.viewpagerindicator.CirclePageIndicator
                            android:id="@+id/infoview_indicator_store"
                            android:layout_width="fill_parent"
                            android:layout_height="10.0dip"
                            android:layout_gravity="center" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/main_bottom"
                android:layout_width="fill_parent"
                android:layout_height="60dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/btn_tool"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/tab_bg_selector"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_tool_selector"
                    android:onClick="onTabClicked"
                    android:paddingBottom="3dip"
                    android:paddingTop="8dip"
                    android:singleLine="true"
                    android:tag="home"
                    android:text="日常工具"
                    android:textColor="@color/color_tab"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/tab_bg_selector"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_life_selector"
                    android:onClick="onTabClicked"
                    android:paddingBottom="3dip"
                    android:paddingTop="8dip"
                    android:singleLine="true"
                    android:tag="sort"
                    android:text="生活服务"
                    android:textColor="@color/color_tab"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/tab_bg_selector"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_service_selector"
                    android:onClick="onTabClicked"
                    android:paddingBottom="3dip"
                    android:paddingTop="8dip"
                    android:singleLine="true"
                    android:tag="store"
                    android:text="充值服务"
                    android:textColor="@color/color_tab"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@drawable/tab_bg_selector"
                    android:button="@null"
                    android:drawableTop="@drawable/ic_store_selector"
                    android:onClick="onTabClicked"
                    android:paddingBottom="3dip"
                    android:paddingTop="8dip"
                    android:singleLine="true"
                    android:tag="shopcart"
                    android:text="99商城"
                    android:textColor="@color/color_tab"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>