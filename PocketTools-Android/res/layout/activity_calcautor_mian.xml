                android:textColor="@color/white"
                android:textSize="30.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/calulator_keyboard_third"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <Button
                android:id="@id/four"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/four"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/five"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/five"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/six"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/six"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/divide"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/divide"
                android:textColor="@color/white"
                android:textSize="30.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/calulator_keyboard_fourth"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <Button
                android:id="@id/one"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/one"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/two"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/two"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/three"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/three"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/sub"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/sub"
                android:textColor="@color/white"
                android:textSize="30.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/calulator_keyboard_five"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <Button
                android:id="@id/zero"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_number_bg"
                android:text="@string/zero"
                android:textColor="@color/white"
                android:textSize="30.0sp" />

            <Button
                android:id="@id/dot"
                android:layout_width="fill_parent"
