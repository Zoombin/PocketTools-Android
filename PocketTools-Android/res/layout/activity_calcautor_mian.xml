                android:layout_width="90.0dip"
                android:layout_height="48.0dip"
                android:layout_gravity="top|left|center" >

                <Button
                    android:id="@id/btn_back"
                    android:layout_width="44.0dip"
                    android:layout_height="44.0dip"
                    android:layout_gravity="left|center"
                    android:background="@drawable/btn_nav_back"
                    android:clickable="false" />
            </FrameLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="140.0dip"
            android:orientation="vertical" >

            <com.juhe.pockettools.commonview.AutoResizeTextView
                android:id="@id/input"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:ellipsize="start"
                android:gravity="right|center"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="50.0sp" />

            <TextView
                android:id="@id/mem"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.0"
                android:gravity="bottom|right|center"
                android:textColor="@color/white"
                android:textSize="18.0sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@id/calulator_function_frist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="5.0dip"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <Button
                android:id="@id/log"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_function_bg"
                android:text="log"
                android:textColor="@color/white"
                android:textSize="24.0sp" />

            <Button
                android:id="@id/ln"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_function_bg"
                android:text="ln"
                android:textColor="@color/white"
                android:textSize="24.0sp" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0" >

                <Button
                    android:id="@id/sqrt"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_calculator_function_bg"
                    android:text="âˆš"
                    android:textColor="@color/transparent"
                    android:textSize="24.0sp" />

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="32.0dip"
                    android:layout_gravity="center"
                    android:background="@drawable/gr_cal_xlogn"
                    android:clickable="false"
                    android:scaleType="centerCrop" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:layout_weight="1.0" >

                <Button
                    android:id="@id/square"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/btn_calculator_function_bg"
                    android:text="^"
                    android:textColor="@color/transparent"
                    android:textSize="24.0sp" />

                <ImageView
                    android:layout_width="60.0dip"
                    android:layout_height="32.0dip"
                    android:layout_gravity="center"
                    android:background="@drawable/gr_cal_xton"
                    android:clickable="false"
                    android:scaleType="centerCrop" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@id/calulator_function_second"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5.0"
            android:orientation="horizontal" >

            <Button
                android:id="@id/factorial"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_function_bg"
                android:text="n!"
                android:textColor="@color/white"
                android:textSize="24.0sp" />

            <Button
                android:id="@id/sin"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_function_bg"
                android:text="sin"
                android:textColor="@color/white"
                android:textSize="24.0sp" />

            <Button
                android:id="@id/cos"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_function_bg"
                android:text="cos"
                android:textColor="@color/white"
                android:textSize="24.0sp" />

            <Button
                android:id="@id/tan"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.0"
                android:background="@drawable/btn_calculator_function_bg"
                android:text="tan"
                android:textColor="@color/white"
                android:textSize="24.0sp" />
        </LinearLayout>

        <LinearLayout
