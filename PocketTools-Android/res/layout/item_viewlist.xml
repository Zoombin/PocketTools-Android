<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
     >

    <ImageView
        android:id="@+id/view_image_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/view_name_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/view_image_1"
        android:textColor="@color/white"
        android:textSize="@dimen/prompt_text_size" />

    <TextView
        android:id="@+id/view_star_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_name_1"
        android:layout_below="@+id/view_name_1"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:id="@+id/view_point_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/view_star_1"
        android:layout_below="@+id/view_star_1"
        android:layout_marginTop="10dp"
        android:textColor="@color/blue"
        android:text="4.4"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:id="@+id/view_market_price_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_point_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="31dp"
        android:textColor="@color/white"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/view_point_1"
        android:layout_toRightOf="@+id/view_star_1"
        android:text="@string/star"
        android:textColor="@color/white"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view_market_price_1"
        android:layout_toLeftOf="@+id/view_market_price_1"
        android:text="@string/market_price"
        android:textColor="@color/white"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:id="@+id/view_price_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/view_point_1"
        android:layout_alignBottom="@+id/view_point_1"
        android:layout_toLeftOf="@+id/item_viewlist_star"
        android:textColor="@color/yellow"
        android:textSize="@dimen/prompt_text_size" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/view_point_1"
        android:layout_alignBottom="@+id/view_point_1"
        android:layout_toRightOf="@+id/view_point_1"
        android:text="@string/ctrip_point"
        android:textColor="@color/blue"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:id="@+id/item_viewlist_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_price_1"
        android:layout_alignRight="@+id/view_market_price_1"
        android:text="@string/start"
        android:textColor="@color/white"
        android:textSize="@dimen/radio_text_size" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_viewlist_star"
        android:layout_toLeftOf="@+id/view_price_1"
        android:text="@string/money"
        android:textColor="@color/yellow"
        android:textSize="@dimen/prompt_text_size" />

</RelativeLayout>